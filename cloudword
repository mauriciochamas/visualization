twe <- read.csv("tweets.csv",stringsAsFactors = F)
library(tm)
library(SnowballC)
cor <- Corpus(VectorSource(twe$Tweet))
cor <- tm_map(cor,tolower)
cor <- tm_map(cor,PlainTextDocument)
cor <- tm_map(cor,removePunctuation)
cor <- tm_map(cor,removeWords,c("apple",stopwords("en")))
freq <- DocumentTermMatrix(cor)
alltwe <- as.data.frame(as.matrix(freq))
colnames(alltwe)
colSums(alltwe)
library(wordcloud)
wordcloud(colnames(alltwe),colSums(alltwe),scale=c(2, 0.25))
negtwe <- subset(alltwe,twe$Avg<=-1)
wordcloud(colnames(negtwe),colSums(negtwe))
wordcloud(colnames(alltwe),colSums(alltwe),scale=c(2, 0.25),random.order = F)
library(RColorBrewer)
display.brewer.all()
wordcloud(colnames(alltwe),colSums(alltwe),random.order = F,colors=brewer.pal(9, "Blues")[c(5, 6, 7, 8, 9)])
wordcloud(colnames(alltwe),colSums(alltwe),random.order = F,colors=brewer.pal(9, "YlOrRd")[c(5, 6, 7, 8, 9)])
wordcloud(colnames(alltwe),colSums(alltwe),scale=c(2, 0.25),random.order = F,colors=c("red", "green", "blue"))
